{
  "name": "@idono87/perkulator",
  "version": "0.2.0",
  "description": "Simple percolating task runner.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Idono87/perkulator.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "typeCheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test-unit": "cross-env NODE_ENV=test mocha",
    "pretest-integration": "npm run build",
    "test-integration": "cross-env INTEGRATION_TEST=true NODE_ENV=test mocha",
    "pretest": "npm run lint && npm run typeCheck",
    "test": "npm run test-unit && npm run test-integration",
    "coverage": "nyc npm test",
    "dev": "nodemon --exec \"npm run test\"",
    "start": "ts-node --files ./src/bin/perkulator.ts",
    "prebuild": "rimraf ./dist",
    "build": "tsc --build"
  },
  "bin": {
    "perkulator": "./dist/cli.js"
  },
  "author": "Sorin Sandru",
  "license": "ISC",
